<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <fragment android:name="net.fosstveit.infoscreen.fragments.InfoScreenFragment"
              android:id="@+id/main_fragment1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="60dp" />
    <fragment android:name="net.fosstveit.infoscreen.fragments.InfoScreenFragment"
              android:id="@+id/main_fragment2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/main_fragment1" />
    <fragment android:name="net.fosstveit.infoscreen.fragments.InfoScreenFragment"
              android:id="@+id/main_fragment3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/main_fragment2" />
</RelativeLayout>

