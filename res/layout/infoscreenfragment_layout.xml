<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ImageView
            android:id="@+id/infoscreen_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_image"/>

    <TextView
            android:id="@+id/infoscreen_user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/infoscreen_user"
            android:text="@string/default_name"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/infoscreen_user_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoscreen_user_details"
            android:layout_toRightOf="@id/infoscreen_user"
            android:text="@string/default_time"
            android:textSize="20sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/infoscreen_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoscreen_user_calendar"
            android:layout_toRightOf="@id/infoscreen_user"
            android:text="@string/default_phone"
            android:textSize="25sp"
            android:textStyle="bold" />

</RelativeLayout>